.wrapper
  = render 'shared/side_bar'
  .wrapper__chat-contents
    .wrapper__chat-contents__header
      .wrapper__chat-contents__header__left-box
        %h2.wrapper__chat-contents__header__left-box__current-group
          グループ名
        %ul.wrapper__chat-contents__header__left-box__member-list
          Member：
          %li.wrapper__chat-contents__header__left-box__member-list__member
            user1,user2
      =link_to "/messages/group_id/edit" do
        .wrapper__chat-contents__header__edit-btn
          Edit
    .wrapper__chat-contents__messages
      = render partial: 'messages/message'
    .wrapper__chat-contents__form
      = form_for [@group, @message] do |f|
        =f.text_field :content, class: "new-message", placeholder: 'type a message'
        .wrapper__chat-contents__form__new-message__input-box
          =f.label :image, class: "wrapper__chat-contents__form__new-message__input-box__text", do
            =fa_icon 'picture-o',class: "wrapper__chat-contents__form__new-message__input-box__image"
            =f.file_field :image,class: "wrapper__chat-contents__form__new-message__input-box__image__message-image"
          =f.submit 'Send',class: "wrapper__chat-contents__form__new-message__send-btn"

