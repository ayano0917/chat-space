.wrapper
  = render 'shared/side_bar'
  .wrapper__chat-contents
    .wrapper__chat-contents__header
      .wrapper__chat-contents__header__left-box
        .wrapper__chat-contents__header__left-box__current-group
          = @group.name
        .wrapper__chat-contents__header__left-box__member-list
          Memberï¼š
          .wrapper__chat-contents__header__left-box__member-list__member
            - @group.group_users.each do |group_user|
              = group_user.user.name
      = link_to "edit" do
        .wrapper__chat-contents__header__edit-btn
          Edit
    .wrapper__chat-contents__messages
      = render @messages
    .wrapper__chat-contents__form
      = form_for [@group, @message] do |f|
        =f.text_field :content, class: "wrapper__chat-contents__form__new-message", placeholder: 'type a message'
        .wrapper__chat-contents__form__input-box
          =f.label :image, class: "wrapper__chat-contents__form__input-box__image" do
            =fa_icon 'picture-o',class: "wrapper__chat-contents__form__input-box__image__image-icon"
            =f.file_field :image,class: "wrapper__chat-contents__form__input-box__image__message-image"
        =f.submit 'Send',class: "wrapper__chat-contents__form__send-btn"

